# Environment
#------------------------------------------------------------------------------#

export CMAKE_GENERATOR=Ninja
export CMAKE_EXPORT_COMPILE_COMMANDS=1
export CONFIG_SCRIPT_GENERATOR=Ninja

#------------------------------------------------------------------------------#
# Aliases
#------------------------------------------------------------------------------#

alias ls=eza

#------------------------------------------------------------------------------#
# Environment modules
#------------------------------------------------------------------------------#

#------------------------------------------------------------------------------#
# Prompt colors.
#------------------------------------------------------------------------------#

. $HOME/.config/bergen/bash.d/themes/gray
[ `whoami` == "root" ] && . $HOME/.config/bergen/bash.d/themes/red-orange

extra_pinfo="SCRATCH"

