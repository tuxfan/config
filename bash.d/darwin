#------------------------------------------------------------------------------#
# Environment modules
#------------------------------------------------------------------------------#

export PATH=~/packages/neovim/bin:$PATH
module load darwin-aliases
module load git

#------------------------------------------------------------------------------#
# Prompt colors.
#------------------------------------------------------------------------------#

. $HOME/.config/bergen/bash.d/themes/disabled
[ `whoami` == "root" ] && . $HOME/.config/bergen/bash.d/themes/red-orange

extra_pinfo="Darwin"

