################################################################################
# Host-specific configuration
################################################################################

#------------------------------------------------------------------------------#
# Environment
#------------------------------------------------------------------------------#

export CMAKE_GENERATOR=Ninja
export CMAKE_EXPORT_COMPILE_COMMANDS=1
export CONFIG_SCRIPT_GENERATOR=Ninja

#------------------------------------------------------------------------------#
# OneDrive
#------------------------------------------------------------------------------#

[ -h $HOME/OneDrive\ -\ Los\ Alamos\ National\ Laboratory ] &&
  rm -rf $HOME/OneDrive\ -\ Los\ Alamos\ National\ Laboratory

[ ! -h $HOME/OneDrive ] &&
  ln -s $HOME/Library/CloudStorage/OneDrive-LosAlamosNationalLaboratory OneDrive

#------------------------------------------------------------------------------#
# Aliases
#------------------------------------------------------------------------------#

alias ls=eza

#------------------------------------------------------------------------------#
# Environment modules
#------------------------------------------------------------------------------#

#------------------------------------------------------------------------------#
# Prompt colors.
#------------------------------------------------------------------------------#

. $HOME/.config/bergen/bash.d/themes/lanl-black
[ `whoami` == "root" ] && . $HOME/.config/bergen/bash.d/themes/red-orange

extra_pinfo="M4-MAX"

#------------------------------------------------------------------------------#
# vim: syntax=sh
#------------------------------------------------------------------------------#
