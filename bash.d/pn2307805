################################################################################
# Host-specific configuration
################################################################################

#------------------------------------------------------------------------------#
# LANL Proxies
#------------------------------------------------------------------------------#

[ -f $HOME/.bash.d/lanl-proxy ] && . $HOME/.bash.d/lanl-proxy

#------------------------------------------------------------------------------#
# Environment modules
#------------------------------------------------------------------------------#

module load lanl-tunnels
module load local-tunnels

#------------------------------------------------------------------------------#
# Prompt colors.
#------------------------------------------------------------------------------#

. $HOME/.config/bergen/bash.d/themes/lanl-black
[ `whoami` == "root" ] && . $HOME/.config/bergen/bash.d/themes/red-orange

extra_pinfo="M2-MAX"

#------------------------------------------------------------------------------#
# vim: syntax=sh
#------------------------------------------------------------------------------#
