#%Module1.0#####################################################################

#------------------------------------------------------------------------------#
# Basic Settings
#------------------------------------------------------------------------------#

set-alias ls "ls --color"
set-alias ll "ls -la"

set-alias rm "rm -i"
set-alias cp "cp -i"
set-alias mv "mv -i"

set-alias rfg "ssh mb finger"

#------------------------------------------------------------------------------#
# Environemtn Modules
#------------------------------------------------------------------------------#

set-alias mls "module list"
set-alias ml "module load"
set-alias mu "module unload"
set-alias ma "module avail"
set-alias ms "module show"

#------------------------------------------------------------------------------#
# Misc
#------------------------------------------------------------------------------#

set-alias top "htop"
set-alias sc "systemctl"
set-alias ssh "ssh -YA"

#------------------------------------------------------------------------------#
# Vim
#------------------------------------------------------------------------------#

set-alias vim "nvim"
set-alias vi "nvim"
set-alias vsplit "nvim -O"
set-alias view "nvim -R"
set-alias vs {nvim -u .config/bergen/vimrc-simple}

#------------------------------------------------------------------------------#
# Make
#------------------------------------------------------------------------------#

set-alias mkae "make"
set-alias maek "make"
set-alias amke "make"
set-alias amek "make"
set-alias kmae "make"
set-alias mk "make -j 4"
