#%Module1.0#####################################################################

#------------------------------------------------------------------------------#
# Basic Settings
#------------------------------------------------------------------------------#

set-alias ls "ls --color"
set-alias ll "ls -la"

set-alias rm "rm -i"
set-alias cp "cp -i"
set-alias mv "mv -i"

set-alias vim "nvim"
set-alias vi "nvim"

#------------------------------------------------------------------------------#
# Environemtn Modules
#------------------------------------------------------------------------------#

set-alias mls "module list"
set-alias ml "module load"
set-alias mu "module unload"
set-alias ma "module avail"
set-alias ms "module show"

set-alias top "htop"
set-alias sc "systemctl"
set-alias ssh "ssh -YA"

#------------------------------------------------------------------------------#
# SSH Tunnels
#------------------------------------------------------------------------------#

set-alias gl-up "ssh -fNTML 2022:gitlab.lanl.gov:22 gl-tunnel"
set-alias gl-st "ssh -TO check gl-tunnel"
set-alias gl-dn "ssh -TO exit gl-tunnel"

set-alias ci-up "ssh -fNTML 3022:flecsi-ci.lanl.gov:22 ci-tunnel"
set-alias ci-st "ssh -TO check ci-tunnel"
set-alias ci-dn "ssh -TO exit ci-tunnel"

set-alias aux-up "ssh -fNTML 4022:flecsi-auxiliary.lanl.gov:22 aux-tunnel"
set-alias aux-st "ssh -TO check aux-tunnel"
set-alias aux-dn "ssh -TO exit aux-tunnel"

#------------------------------------------------------------------------------#
# Make
#------------------------------------------------------------------------------#

set-alias mkae "make"
set-alias maek "make"
set-alias amke "make"
set-alias amek "make"
set-alias kmae "make"
set-alias mk "make -j 4"
